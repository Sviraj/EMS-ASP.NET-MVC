@model WebApplication1.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
}

<h2>Delete Employee</h2>

<div>
    <h3>Are you sure you want to delete this employee?</h3>
    <div><strong>Name:</strong> @Model.Name</div>
    <div><strong>Email:</strong> @Model.Email</div>
    <div><strong>Job Position:</strong> @Model.JobPosition</div>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Employee", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancel</a>
}
